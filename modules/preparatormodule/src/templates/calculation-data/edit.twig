{% extends "_layouts/cp" %}

{% import "_includes/forms" as forms %}

{% set title = 'Calculation Data' %}

{% block content %}
    <form method="post" accept-charset="UTF-8" data-saveshortcut="1" name="calculation-data">
        <input type="hidden" name="action" value="preparator-module/calculation-data/save">
        <input type="hidden" name="redirect" value="preparator-module/calculation-data">
        {{ getCsrfInput() }}

        {{ forms.textField({
            first: true,
            label: "Identification"|t,
            instructions: "Identification of the date."|t,
            id: 'identification',
            name: 'identification',
            value: calculationData.identification,
            errors: calculationData.getErrors('identification'),
            autofocus: true,
            required: true,
            translatable: true
        }) }}

        {{ forms.textField({
            first: true,
            label: "Value"|t,
            instructions: "Value of the data."|t,
            id: 'value',
            name: 'value',
            value: calculationData.value,
            errors: calculationData.getErrors('value'),
            autofocus: true,
            required: true,
            translatable: true
        }) }}

        <hr>

        <div class="buttons">
            <input type="submit" class="btn submit" value="{{ 'Save'|t }}">
        </div>
    </form>
{% endblock %}

